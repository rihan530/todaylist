<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"     android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/calendar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="로그인" android:id="@+id/main_txt"
            android:textColor="#FF6369"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#f9f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/login_id"
            android:gravity="center_vertical"
            android:textColor="#00B252"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f9f8f8"
            android:gravity="center_vertical"
            android:hint="ID"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#f9f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/login_pw"
            android:gravity="center_vertical"
            android:textColor="#00B252"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f9f8f8"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#FF6369"
        android:gravity="center"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="16dp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center_vertical|right" android:paddingRight="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/auto_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/check" />

        <TextView
            android:id="@+id/auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:paddingLeft="5dp"

            android:text="자동로그인"
            android:textColor="#000000"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:id="@+id/join_user"
        android:layout_width="match_parent" android:layout_marginTop="20dp"
        android:layout_height="50dp"

        android:gravity="center"
         android:background="#FF6369"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="16dp" />




</LinearLayout>
