<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_rowid"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:singleLine="true" android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/reg_id"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#444444"
            android:textSize="13dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent" android:gravity="center"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="23dp" android:visibility="gone"
            android:background="#1E96FF" android:gravity="center"
            android:textColor="#ffffff" android:text="파일"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent" android:layout_marginTop="3dp"
            android:layout_height="23dp"
            android:background="#f31233" android:gravity="center"
            android:textColor="#ffffff" android:text="수정"
            android:textSize="12dp" />


    </LinearLayout>



</LinearLayout>