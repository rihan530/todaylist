<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_cell_ll_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border11" >

    <TextView
        android:id="@+id/day_cell_tv_day"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top|left" android:paddingTop="2dp" android:paddingLeft="3dp"
        android:textSize="10dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

       <ImageView
           android:layout_width="20dp" android:id="@+id/img" android:background="@drawable/icon"
           android:layout_height="20dp" />



    </LinearLayout>

</FrameLayout>